<TiglMenu OnMenuItemClick="ChangeSegment" />

<VerticalSpace Height="50" />

<FlexRowContainer JustifyContent="Enums.JustifyContent.SpaceBetween">
    <Button ButtonText="Report Game" OnClick="RedirectToReportGameForm" Width="40" />
    <Button ButtonText="Register" OnClick="RedirectToRegisterPage" Width="40" />
</FlexRowContainer>

<VerticalSpace Height="20" />

<StretchHeightContainer CssClass="background" >

    <CascadingValue Value="_seasons" Name="Seasons">

        @if (_selectedSegment == TiglMenuItem.Leaderboard)
        {
            <TiglLeaderboardGrid />
        }

        @if (_selectedSegment == TiglMenuItem.Statistics)
        {
            <TiglStatisticsGrid />
        }

        @if (_selectedSegment == TiglMenuItem.Players)
        {
            <TiglPlayersGrid />
        }

        @if (_selectedSegment == TiglMenuItem.GameReports)
        {
            <TiglGamesGrid />
        }

    </CascadingValue>

</StretchHeightContainer>