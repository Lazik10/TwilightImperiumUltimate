@using TwilightImperiumUltimate.Web.Components.Shared.Bars

<VerticalSpace Height="50" />

<StretchHeightContainer CssClass="background">

    <VerticalSpace Height="10" />

    <FlexColumnCenteredContainer>
        <AsyncGamesSearchBar GameNames="@_gameNames" OnGameSelect="OnGameSelect" SearhTitle="@Strings.AsyncStats_SearchByGameIdTitle" Width="50" />
        <AsyncGamesSearchBar GameNames="@_gameFunNames" OnGameSelect="OnGameFunNameSelect" SearhTitle="@Strings.AsyncStats_SearchByGameFunNameTitle" Width="50" />
    </FlexColumnCenteredContainer>

    <VerticalSpace Height="10" />

    <FlexColumnCenteredContainer>

        <FlexRowContainer Width="70">

            <EnumPicker TEnum="AsyncGameType" CurrentValue="@_asyncGameType" Label="@Strings.AsyncGameStats_GameType" Width="100" CurrentValueChanged="GameTypeChanged" />
            <EnumPicker TEnum="AsyncGameStatusFilter" CurrentValue="@_gameStatus" Label="Status" Width="100" ButtonWidth="50" CurrentValueChanged="GameStatusChanged" />

        </FlexRowContainer>

    </FlexColumnCenteredContainer>

    <AsyncGamesList GameDates="@_gameDates"
        AsyncGameType="@_asyncGameType"
        StatusFilter="@_gameStatus"
        AsyncGameDiscordId="@_asyncGameDiscordId"
        AsyncGameFunName="@_asyncGameFunName" />

</StretchHeightContainer>
