
<FlexColumnContainer Width="@Width">

    @if (GameDates != null && GameDates.GameDates.Count > 0)
    {
        @foreach (var year in SortedGameDates())
        {
            var yearDt = new DateTime(year.Year, 1, 1);

            <VerticalSpace Height="50" />
            <Label FontSize="20" CenterText="true" TextColor="GetYearColor(yearDt)" Text="@(yearDt.ToString("yyyy"))" />
            <VerticalSpace Height="10" />

            @foreach (var month in year.Months.OrderByDescending(m => m))
            {
                var monthDt = new DateTime(year.Year, month, 1);

                <TextButton FontSize="16" Style="@GetMonthColor(monthDt)" Text="@(monthDt.ToString("MMMM"))" OnClick="() => OnMonthSelected(yearDt.Year, month)" />
                <VerticalSpace Height="10" />
            }

        }

        <VerticalSpace Height="20" />
    }

</FlexColumnContainer>
