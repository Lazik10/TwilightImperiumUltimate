@using TwilightImperiumUltimate.Web.Components.Async.Games
@using TwilightImperiumUltimate.Web.Components.Async.Players
@using TwilightImperiumUltimate.Web.Components.Async.Statistics

<AsyncMenu OnMenuItemClick="ChangeSegment"/>

<StretchHeightContainer >

    @if (_selectedSegment == AsyncMenuItem.Statistics)
    {
        <StatisticsGrid />
    }

    @if (_selectedSegment == AsyncMenuItem.Games)
    {
        <AsyncGamesGrid />
    }

    @if (_selectedSegment == AsyncMenuItem.Players)
    {
        <AsyncPlayersList />
    }

</StretchHeightContainer>