@using TwilightImperiumUltimate.Web.Components.Shared.Layouts
@using TwilightImperiumUltimate.Web.Components.Shared.Text
@using TwilightImperiumUltimate.Web.Components.Shared.Text.CardGenerator.SecretCard
@inherits BaseCardPreview

<CardExportArea CardTitle="@CardTitle">
    <ImageBackgroundContainer ImagePath="@BackgroundImagePath">
        <div style="display: flex; flex-direction: column; height: 750px; width: 500px;">
            <div class="secret-card-title-area">
                <SecretCardTitle Text="@CardTitle" FontSize="@TitleFontSize" />
            </div>
            <div class="secret-card-text-area">
                <SecretCardText Text="@CardText" KeywordText="@KeywordsText" FontSize="@TextFontSize" />
            </div>
        </div>
    </ImageBackgroundContainer>
</CardExportArea>
