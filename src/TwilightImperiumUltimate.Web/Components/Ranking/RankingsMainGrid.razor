<RankingsMenu OnMenuItemClick="ChangeSegment" />

<VerticalSpace Height="50" />

<StretchHeightContainer CssClass="background" >

    @if (_selectedSegment == RankingsMenuItem.Ranks)
    {
        <RanksGrid Rankings="_rankings" />
    }

    @if (_selectedSegment == RankingsMenuItem.Leaders)
    {
        <LeadersGrid Leaders="_leaders" />
    }

    @if (_selectedSegment == RankingsMenuItem.Achievements)
    {
        <AchievementsGrid />
    }

</StretchHeightContainer>