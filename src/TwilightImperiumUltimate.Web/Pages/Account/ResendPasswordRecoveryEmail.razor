@page "/account/resend-password-recovery-email"

<PageTitle>@Strings.Page_PasswordRecovery</PageTitle>

<Page>
    <Label Text="@Strings.Login_PasswordRecovery" FontSize="36" Width="50" CenterText="true" />

    <VerticalSpace Height="50" />

    @if (_passwordRecoveryEmailSendSuccess && _recoveryEmailSend)
    {
        <Label Text="@Strings.Login_PasswordRecoveryEmailSend" FontSize="24" CenterText="true" TextColor="TextColor.Green"/>
        <VerticalSpace Height="50" />
    }
    else if (!_passwordRecoveryEmailSendSuccess && _recoveryEmailSend)
    {
        <Label Text="@Strings.Login_PasswordRecoveryEmailSendFailed" FontSize="24" CenterText="true" TextColor="TextColor.Red"/>
        <VerticalSpace Height="50" />
    }

    <Label Text="@Strings.Login_Email" Width="50" CenterText="true" />

    <VerticalSpace Height="20" />

    <FlexRowContainer Width="40">
        <RadzenTextBox Placeholder="@Strings.Login_Email"
                        @bind-Value="PasswordRecoveryModel.Email"
                        class="w-20 flex-row title white handel" />
    </FlexRowContainer>

    <VerticalSpace Height="50" />

    <FlexRowContainer JustifyContent="Enums.JustifyContent.Center" >
        <Button ButtonText="@Strings.Login_ResendPasswordRecoveryEmail" OnClick="@(async () => await ResendPasswordRecoveryEmailCode())" CssClass="button" IsDisabled="@GetDisabledState()"/>
    </FlexRowContainer>
</Page>
